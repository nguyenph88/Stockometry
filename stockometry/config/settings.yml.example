# Stockometry Configuration File
# All application configuration consolidated in one place

# --- Environment Configuration ---
environment: development
log_level: INFO

# --- API Configuration ---
apis:
  news_api_key: what_ever_here
  news_api:
    base_url: "https://newsapi.org/v2/everything"
    query_params:
      q: "stock market OR regulation OR tariff OR subsidy"
      language: "en"
      sortBy: "publishedAt"
      pageSize: 100

# --- Database Configuration ---
database:
  host: 10.0.0.100
  port: 5432
  name: stockometry
  user: postgres
  password: VerySecurePassword1234567890
  name_staging: stockometry_staging

