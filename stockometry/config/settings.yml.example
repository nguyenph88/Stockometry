# --- Scheduler Configuration ---
scheduler:
  timezone: UTC
  news_interval_hours: 1
  market_data_hour: 1
  nlp_interval_minutes: 15
  final_report_hour: 2
  final_report_minute: 30

# --- NLP Configuration ---
nlp:
  spacy_model: en_core_web_sm
  finbert_model: ProsusAI/finbert
  confidence_threshold: 0.3

# --- Analysis Configuration ---
analysis:
  historical_days: 6
  sector_thresholds:
    strong_buy:
      historical: 0.6
      today: 0.7
    buy:
      historical: 0.4
      today: 0.5
    weak_buy:
      historical: 0.2
      today: 0.3
    strong_sell:
      historical: -0.6
      today: -0.7
    sell:
      historical: -0.4
      today: -0.5
    weak_sell:
      historical: -0.2
      today: -0.3

# --- Output Configuration ---
output:
  json_directory: exports
  filename_format: "report_YYYY-MM-DD_HHMMSS_{run_source}.json"
